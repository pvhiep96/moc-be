<!DOCTYPE html>
<html>
  <head>
    <title>Quản lý Dự án</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= tinymce_assets %>
    
    <style>
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
      }
      
      .sidebar {
        min-height: calc(100vh - 56px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
        background-color: #343a40;
      }
      
      .sidebar .nav-link {
        color: rgba(255,255,255,.75);
        border-radius: 0.25rem;
        margin: 0.2rem 0;
      }
      
      .sidebar .nav-link:hover {
        color: rgba(255,255,255,1);
        background-color: rgba(255,255,255,.1);
      }
      
      .sidebar .nav-link.active {
        color: #fff;
        background-color: #007bff;
      }
      
      .main-content {
        min-height: calc(100vh - 56px);
      }
      
      .navbar-brand {
        font-weight: 500;
      }
      
      .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        margin-bottom: 1.5rem;
        border: none;
        border-radius: 0.5rem;
      }
      
      .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 1rem 1.25rem;
        border-top-left-radius: 0.5rem !important;
        border-top-right-radius: 0.5rem !important;
      }
      
      .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
      }
      
      .table {
        border-radius: 0.5rem;
        overflow: hidden;
      }
      
      .table th {
        font-weight: 500;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="fas fa-tasks me-2"></i>Quản lý Dự án
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to projects_path, class: "nav-link #{current_page?(projects_path) ? 'active' : ''}" do %>
                <i class="fas fa-home me-1"></i> Trang chủ
              <% end %>
            </li>
            <% if admin_logged_in? %>
              <li class="nav-item">
                <%= link_to new_project_path, class: "nav-link #{current_page?(new_project_path) ? 'active' : ''}" do %>
                  <i class="fas fa-plus me-1"></i> Tạo dự án mới
                <% end %>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav">
            <% if admin_logged_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-user-circle me-1"></i> <%= current_admin.user_name %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <%= button_to logout_path, method: :delete, class: "dropdown-item" do %>
                      <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                    <% end %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to login_path, class: "btn btn-outline-light" do %>
                  <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <% if admin_logged_in? %>
          <!-- Sidebar -->
          <div class="col-md-3 col-lg-2 d-md-block sidebar collapse bg-dark">
            <div class="position-sticky pt-3">
              <ul class="nav flex-column">
                <li class="nav-item">
                  <%= link_to projects_path, class: "nav-link #{controller_name == 'projects' && action_name == 'index' ? 'active' : ''}" do %>
                    <i class="fas fa-list me-2"></i> Danh sách dự án
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_project_path, class: "nav-link #{controller_name == 'projects' && action_name == 'new' ? 'active' : ''}" do %>
                    <i class="fas fa-file-circle-plus me-2"></i> Tạo dự án mới
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
          
          <!-- Main content -->
          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 main-content">
            <% if notice %>
              <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-1"></i> <%= notice %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>
            
            <% if alert %>
              <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-1"></i> <%= alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>

            <%= yield %>
          </main>
        <% else %>
          <!-- Full width content for non-logged in users -->
          <main class="col-12 px-4 py-4">
            <% if notice %>
              <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-1"></i> <%= notice %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>
            
            <% if alert %>
              <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-1"></i> <%= alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>

            <%= yield %>
          </main>
        <% end %>
      </div>
    </div>

    <footer class="bg-dark text-white py-4 mt-auto">
      <div class="container text-center">
        <p class="mb-0">&copy; <%= Date.today.year %> Quản lý Dự án</p>
      </div>
    </footer>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
