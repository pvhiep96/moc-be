<!-- app/views/inquiry_mailer/thank_you.html.erb -->
<!DOCTYPE html>
<html>
  <body style="font-family: Arial, sans-serif; color: #333;">
    <h2>Thank You, <%= @inquiry.full_name %>!</h2>
    <p>We’ve received your inquiry and will get back to you soon.</p>

    <hr>

    <h3>Your Message:</h3>
    <p><strong>Event:</strong> <%= @inquiry.event_type || "Not specified" %></p>
    <p><strong>Date:</strong> <%= @inquiry.event_date&.strftime("%B %d, %Y") || "TBD" %></p>
    <p><strong>Message:</strong></p>
    <blockquote><%= simple_format(@inquiry.message) %></blockquote>

    <p>We’ll reply within 24 hours.</p>
    <p>— The Team</p>
  </body>
</html>
