<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><%= link_to 'Trang chủ', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Dự án', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
      </ol>
    </nav>
    <h2 class="mt-2 mb-0 fw-bold"><%= @project.name %></h2>
  </div>
  <div class="d-none d-md-block">
    <img src="https://cdn-icons-png.flaticon.com/512/3094/3094134.png" alt="Studio Edit" style="height: 80px; opacity: 0.8;">
  </div>
</div>

<div class="card shadow border-0 overflow-hidden">
  <div class="card-header p-0">
    <div class="px-4 py-3" style="background: linear-gradient(135deg, #fd7e14, #ffc107) !important; color: #212529;">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Chỉnh sửa dự án</h4>
      </div>
      <p class="mb-0 mt-2 opacity-75 small">Cập nhật thông tin dự án, video và nội dung bên dưới</p>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="p-4">
      <%= render 'form', project: @project %>
    </div>
  </div>
</div>
