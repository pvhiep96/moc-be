<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><%= link_to 'Trang chủ', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Dự án', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
        <li class="breadcrumb-item active" aria-current="page">Chọn ảnh hiển thị</li>
      </ol>
    </nav>
    <h2 class="mt-2 mb-0"><%= @project.name %> - Chọn ảnh hiển thị</h2>
  </div>
</div>

<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-white py-3">
    <h5 class="mb-0">Chọn ảnh hiển thị</h5>
    <p class="text-muted mb-0 small">Chọn các ảnh sẽ hiển thị trong dự án</p>
  </div>
  <div class="card-body">
    <%= form_with(url: update_images_project_path(@project), method: :post, local: true, id: "image-selection-form") do |form| %>
      <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h6 class="mb-0">Tất cả ảnh (<%= @project_images.count %>)</h6>
          <div>
            <button type="button" class="btn btn-sm btn-outline-primary" id="select-all-btn">
              Chọn tất cả
            </button>
            <button type="button" class="btn btn-sm btn-secondary" id="deselect-all-btn">
              Bỏ chọn tất cả
            </button>
          </div>
        </div>

        <% if @project_images.present? %>
          <div class="row g-3" id="image-gallery">
            <% @project_images.each do |image| %>
              <div class="col-md-3 col-sm-4 col-6">
                <div class="card h-100 image-card <%= 'selected' if image.display %>" data-id="<%= image.id %>">
                  <div class="position-relative">
                    <img src="<%= image.image_url %>" class="card-img-top" alt="Project image">
                    <div class="position-absolute top-0 end-0 p-2">
                      <div class="form-check">
                        <%= check_box_tag 'selected_images[]', image.id, image.display,
                            class: 'form-check-input image-checkbox',
                            id: "image-#{image.id}" %>
                      </div>
                    </div>

                  </div>
                  <div class="card-footer bg-white p-2 text-center">
                    <small class="text-muted">ID: <%= image.id %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Chưa có hình ảnh nào. Vui lòng thêm ID Google Drive và tải lại hình ảnh.
          </div>
        <% end %>
      </div>

      <div class="mt-4">
        <h6 class="mb-3">Ảnh đã chọn (<span id="selected-count"><%= @selected_image_ids.count %></span>)</h6>
        <div class="row g-3" id="selected-images-container">
          <% if @selected_image_ids.present? %>
            <% @project_images.select { |img| @selected_image_ids.include?(img.id) }
                             .each do |image| %>
              <div class="col-md-2 col-sm-3 col-4 selected-image-item" data-id="<%= image.id %>">
                <div class="card h-100 position-relative">
                  <img src="<%= image.image_url %>" class="card-img-top" alt="Selected image">
                  <div class="card-footer p-1 text-center">
                    <button type="button" class="btn btn-sm btn-outline-danger remove-selected" data-id="<%= image.id %>">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="col-12">
              <div class="alert alert-info" id="no-selected-message">
                <i class="fas fa-info-circle me-2"></i>
                Chưa có ảnh nào được chọn. Vui lòng chọn ảnh từ danh sách trên.
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <%= link_to @project, class: 'btn btn-secondary' do %>
          <i class="fas fa-arrow-left me-1"></i> Quay lại
        <% end %>
        <div>
          <%= link_to manage_content_project_path(@project), class: 'btn btn-outline-info me-2' do %>
            <i class="fas fa-sort me-1"></i> Quản lý thứ tự hiển thị
          <% end %>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-1"></i> Lưu thay đổi
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .image-card {
    transition: all 0.2s;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .image-card.selected {
    border-color: #007bff;
    background-color: rgba(0, 123, 255, 0.05);
  }

  .selected-image-item {
    transition: all 0.3s;
  }

  #selected-images-container {
    min-height: 100px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log("DOM Content Loaded");
    console.log("jQuery available:", typeof jQuery !== 'undefined');

    // Sử dụng vanilla JavaScript để tránh phụ thuộc vào jQuery
    function setupImageManagement() {
      // Khi click vào card ảnh
      document.querySelectorAll('.image-card').forEach(card => {
        card.addEventListener('click', function(e) {
          if (!e.target.classList.contains('form-check-input') && !e.target.closest('.form-check')) {
            const checkbox = this.querySelector('.image-checkbox');

            // Thay đổi trạng thái checkbox
            checkbox.checked = !checkbox.checked;
            this.classList.toggle('selected', checkbox.checked);

            updateSelectedImages();
            updateButtonStyles();
          }
        });
      });

      // Khi click vào checkbox
      document.querySelectorAll('.image-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', function() {
          const card = this.closest('.image-card');
          card.classList.toggle('selected', this.checked);

          updateSelectedImages();
          updateButtonStyles();
        });
      });

      // Nút chọn tất cả
      const selectAllBtn = document.getElementById('select-all-btn');
      if (selectAllBtn) {
        selectAllBtn.addEventListener('click', function() {
          console.log('Select all clicked');

          // Chọn tất cả các checkbox chưa được chọn
          document.querySelectorAll('.image-checkbox:not(:checked)').forEach(checkbox => {
            checkbox.checked = true;
            checkbox.closest('.image-card').classList.add('selected');
          });

          updateSelectedImages();
          updateButtonStyles();

          // Thay đổi màu nút
          selectAllBtn.classList.remove('btn-outline-primary');
          selectAllBtn.classList.add('btn-primary');

          const deselectAllBtn = document.getElementById('deselect-all-btn');
          if (deselectAllBtn) {
            deselectAllBtn.classList.remove('btn-secondary');
            deselectAllBtn.classList.add('btn-outline-secondary');
          }
        });
      }

      // Nút bỏ chọn tất cả
      const deselectAllBtn = document.getElementById('deselect-all-btn');
      if (deselectAllBtn) {
        deselectAllBtn.addEventListener('click', function() {
          console.log('Deselect all clicked');

          // Bỏ chọn tất cả các checkbox
          document.querySelectorAll('.image-checkbox').forEach(checkbox => {
            checkbox.checked = false;
            checkbox.closest('.image-card').classList.remove('selected');
          });

          updateSelectedImages();
          updateButtonStyles();

          // Thay đổi màu nút
          deselectAllBtn.classList.remove('btn-outline-secondary');
          deselectAllBtn.classList.add('btn-secondary');

          const selectAllBtn = document.getElementById('select-all-btn');
          if (selectAllBtn) {
            selectAllBtn.classList.remove('btn-primary');
            selectAllBtn.classList.add('btn-outline-primary');
          }

          // Xóa bỏ tất cả các ảnh đã chọn
          const container = document.getElementById('selected-images-container');
          if (container) {
            container.innerHTML = `
              <div class="col-12">
                <div class="alert alert-info" id="no-selected-message">
                  <i class="fas fa-info-circle me-2"></i>
                  Chưa có ảnh nào được chọn. Vui lòng chọn ảnh từ danh sách trên.
                </div>
              </div>
            `;
          }

          // Cập nhật số lượng ảnh đã chọn
          const selectedCount = document.getElementById('selected-count');
          if (selectedCount) {
            selectedCount.textContent = '0';
          }
        });
      }

      // Nút xóa ảnh đã chọn
      document.addEventListener('click', function(e) {
        if (e.target.classList.contains('remove-selected') || e.target.closest('.remove-selected')) {
          const button = e.target.classList.contains('remove-selected') ? e.target : e.target.closest('.remove-selected');
          const imageId = button.dataset.id;
          const checkbox = document.getElementById(`image-${imageId}`);

          if (checkbox) {
            checkbox.checked = false;
            checkbox.closest('.image-card').classList.remove('selected');

            updateSelectedImages();
            updateButtonStyles();
          }
        }
      });

      // Cập nhật trạng thái của các nút dựa trên số lượng ảnh đã chọn
      function updateButtonStyles() {
        const selectedCount = document.querySelectorAll('.image-checkbox:checked').length;
        const totalCount = document.querySelectorAll('.image-checkbox').length;

        const selectAllBtn = document.getElementById('select-all-btn');
        const deselectAllBtn = document.getElementById('deselect-all-btn');

        if (selectedCount === 0) {
          // Không có ảnh nào được chọn
          if (selectAllBtn) {
            selectAllBtn.classList.remove('btn-primary');
            selectAllBtn.classList.add('btn-outline-primary');
          }
          if (deselectAllBtn) {
            deselectAllBtn.classList.remove('btn-outline-secondary');
            deselectAllBtn.classList.add('btn-secondary');
          }
        } else if (selectedCount === totalCount) {
          // Tất cả ảnh đều được chọn
          if (selectAllBtn) {
            selectAllBtn.classList.remove('btn-outline-primary');
            selectAllBtn.classList.add('btn-primary');
          }
          if (deselectAllBtn) {
            deselectAllBtn.classList.remove('btn-secondary');
            deselectAllBtn.classList.add('btn-outline-secondary');
          }
        } else {
          // Một số ảnh được chọn
          if (selectAllBtn) {
            selectAllBtn.classList.remove('btn-primary');
            selectAllBtn.classList.add('btn-outline-primary');
          }
          if (deselectAllBtn) {
            deselectAllBtn.classList.remove('btn-secondary');
            deselectAllBtn.classList.add('btn-outline-secondary');
          }
        }
      }

      // Cập nhật danh sách ảnh đã chọn
      function updateSelectedImages() {
        // Lấy danh sách ảnh đã chọn
        const selectedImages = [];

        document.querySelectorAll('.image-checkbox:checked').forEach(checkbox => {
          const imageId = checkbox.value;
          const card = checkbox.closest('.image-card');

          selectedImages.push({
            id: imageId,
            src: card.querySelector('img').src
          });
        });

        // Cập nhật số lượng
        document.getElementById('selected-count').textContent = selectedImages.length;

        // Cập nhật container
        const container = document.getElementById('selected-images-container');
        container.innerHTML = '';

        if (selectedImages.length === 0) {
          container.innerHTML = `
            <div class="col-12">
              <div class="alert alert-info" id="no-selected-message">
                <i class="fas fa-info-circle me-2"></i>
                Chưa có ảnh nào được chọn. Vui lòng chọn ảnh từ danh sách trên.
              </div>
            </div>
          `;
        } else {
          selectedImages.forEach(image => {
            const div = document.createElement('div');
            div.className = 'col-md-2 col-sm-3 col-4 selected-image-item';
            div.dataset.id = image.id;
            div.innerHTML = `
              <div class="card h-100 position-relative">
                <img src="${image.src}" class="card-img-top" alt="Selected image">
                <div class="card-footer p-1 text-center">
                  <button type="button" class="btn btn-sm btn-outline-danger remove-selected" data-id="${image.id}">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            `;
            container.appendChild(div);
          });
        }
      }

      // Khởi tạo trạng thái ban đầu
      function initializeSelectedImages() {
        updateSelectedImages();
        updateButtonStyles();
      }

      // Khởi tạo trạng thái ban đầu
      initializeSelectedImages();
    }

    // Thử sử dụng jQuery nếu có
    if (typeof jQuery !== 'undefined') {
      jQuery(function() {
        console.log("jQuery ready function executed");
        setupImageManagement();
      });
    } else {
      // Fallback to vanilla JS
      console.log("Using vanilla JS fallback");
      setupImageManagement();
    }
  });
</script>
