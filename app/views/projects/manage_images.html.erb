<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><%= link_to 'Trang chủ', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Dự án', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
        <li class="breadcrumb-item active" aria-current="page">Quản lý ảnh hiển thị</li>
      </ol>
    </nav>
    <h2 class="mt-2 mb-0"><%= @project.name %> - Quản lý ảnh hiển thị</h2>
  </div>
</div>

<div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-white py-3">
    <h5 class="mb-0">Chọn ảnh hiển thị</h5>
    <p class="text-muted mb-0 small">Chọn và sắp xếp các ảnh sẽ hiển thị trên trang chủ</p>
  </div>
  <div class="card-body">
    <%= form_with(url: update_images_project_path(@project), method: :post, local: true, id: "image-selection-form") do |form| %>
      <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h6 class="mb-0">Tất cả ảnh (<%= @project_images.count %>)</h6>
          <div>
            <button type="button" class="btn btn-sm btn-outline-primary" id="select-all-btn">
              <i class="fas fa-check-square me-1"></i>Chọn tất cả
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="deselect-all-btn">
              <i class="fas fa-square me-1"></i>Bỏ chọn tất cả
            </button>
          </div>
        </div>
        
        <% if @project_images.present? %>
          <div class="row g-3" id="image-gallery">
            <% @project_images.each do |image| %>
              <div class="col-md-3 col-sm-4 col-6">
                <div class="card h-100 image-card <%= 'selected' if image.display %>" data-id="<%= image.id %>">
                  <div class="position-relative">
                    <img src="<%= image.image_url %>" class="card-img-top" alt="Project image">
                    <div class="position-absolute top-0 end-0 p-2">
                      <div class="form-check">
                        <%= check_box_tag 'selected_images[]', image.id, image.display, 
                            class: 'form-check-input image-checkbox', 
                            id: "image-#{image.id}" %>
                      </div>
                    </div>
                    <% if image.display %>
                      <div class="position-absolute top-0 start-0 p-2">
                        <span class="badge bg-primary">
                          <%= @selected_image_ids.index(image.id) + 1 %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                  <div class="card-footer bg-white p-2 text-center">
                    <small class="text-muted">ID: <%= image.id %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Chưa có hình ảnh nào. Vui lòng thêm ID Google Drive và tải lại hình ảnh.
          </div>
        <% end %>
      </div>
      
      <div class="mt-4">
        <h6 class="mb-3">Ảnh đã chọn (<span id="selected-count"><%= @selected_image_ids.count %></span>)</h6>
        <div class="row g-3" id="selected-images-container">
          <% if @selected_image_ids.present? %>
            <% @project_images.select { |img| @selected_image_ids.include?(img.id) }
                             .sort_by { |img| @selected_image_ids.index(img.id) }
                             .each_with_index do |image, index| %>
              <div class="col-md-2 col-sm-3 col-4 selected-image-item" data-id="<%= image.id %>">
                <div class="card h-100 position-relative">
                  <div class="position-absolute top-0 start-0 p-1">
                    <span class="badge bg-primary"><%= index + 1 %></span>
                  </div>
                  <img src="<%= image.image_url %>" class="card-img-top" alt="Selected image">
                  <div class="card-footer p-1 text-center">
                    <button type="button" class="btn btn-sm btn-outline-danger remove-selected" data-id="<%= image.id %>">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="col-12">
              <div class="alert alert-info" id="no-selected-message">
                <i class="fas fa-info-circle me-2"></i>
                Chưa có ảnh nào được chọn. Vui lòng chọn ảnh từ danh sách trên.
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="d-flex justify-content-between align-items-center mt-4">
        <%= link_to @project, class: 'btn btn-secondary' do %>
          <i class="fas fa-arrow-left me-1"></i> Quay lại
        <% end %>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save me-1"></i> Lưu thay đổi
        </button>
      </div>
    <% end %>
  </div>
</div>

<style>
  .image-card {
    transition: all 0.2s;
    border: 2px solid transparent;
    cursor: pointer;
  }
  
  .image-card.selected {
    border-color: #007bff;
    background-color: rgba(0, 123, 255, 0.05);
  }
  
  .selected-image-item {
    transition: all 0.3s;
  }
  
  #selected-images-container {
    min-height: 100px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Khi click vào card ảnh
    $('.image-card').on('click', function(e) {
      if (!$(e.target).hasClass('form-check-input')) {
        const checkbox = $(this).find('.image-checkbox');
        checkbox.prop('checked', !checkbox.prop('checked'));
        $(this).toggleClass('selected');
        updateSelectedImages();
      }
    });
    
    // Khi click vào checkbox
    $('.image-checkbox').on('change', function() {
      $(this).closest('.image-card').toggleClass('selected', $(this).prop('checked'));
      updateSelectedImages();
    });
    
    // Nút chọn tất cả
    $('#select-all-btn').on('click', function() {
      $('.image-checkbox').prop('checked', true);
      $('.image-card').addClass('selected');
      updateSelectedImages();
    });
    
    // Nút bỏ chọn tất cả
    $('#deselect-all-btn').on('click', function() {
      $('.image-checkbox').prop('checked', false);
      $('.image-card').removeClass('selected');
      updateSelectedImages();
    });
    
    // Nút xóa ảnh đã chọn
    $(document).on('click', '.remove-selected', function() {
      const imageId = $(this).data('id');
      $(`#image-${imageId}`).prop('checked', false);
      $(`.image-card[data-id="${imageId}"]`).removeClass('selected');
      updateSelectedImages();
    });
    
    // Cập nhật danh sách ảnh đã chọn
    function updateSelectedImages() {
      const selectedImages = [];
      
      $('.image-checkbox:checked').each(function() {
        selectedImages.push({
          id: $(this).val(),
          src: $(this).closest('.image-card').find('img').attr('src')
        });
      });
      
      // Cập nhật số lượng
      $('#selected-count').text(selectedImages.length);
      
      // Cập nhật container
      const container = $('#selected-images-container');
      container.empty();
      
      if (selectedImages.length === 0) {
        container.html(`
          <div class="col-12">
            <div class="alert alert-info" id="no-selected-message">
              <i class="fas fa-info-circle me-2"></i>
              Chưa có ảnh nào được chọn. Vui lòng chọn ảnh từ danh sách trên.
            </div>
          </div>
        `);
      } else {
        selectedImages.forEach((image, index) => {
          container.append(`
            <div class="col-md-2 col-sm-3 col-4 selected-image-item" data-id="${image.id}">
              <div class="card h-100 position-relative">
                <div class="position-absolute top-0 start-0 p-1">
                  <span class="badge bg-primary">${index + 1}</span>
                </div>
                <img src="${image.src}" class="card-img-top" alt="Selected image">
                <div class="card-footer p-1 text-center">
                  <button type="button" class="btn btn-sm btn-outline-danger remove-selected" data-id="${image.id}">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>
          `);
        });
      }
    }
    
    // Khởi tạo Sortable.js nếu có
    if (typeof Sortable !== 'undefined') {
      new Sortable(document.getElementById('selected-images-container'), {
        animation: 150,
        ghostClass: 'bg-light',
        onEnd: function() {
          // Cập nhật thứ tự các input hidden
          updateOrder();
        }
      });
    }
    
    // Cập nhật thứ tự các input hidden
    function updateOrder() {
      const newOrder = [];
      $('.selected-image-item').each(function(index) {
        const imageId = $(this).data('id');
        newOrder.push(imageId);
        $(this).find('.badge').text(index + 1);
      });
      
      // Xóa tất cả input hidden cũ
      $('input[name="selected_images[]"]').remove();
      
      // Thêm lại theo thứ tự mới
      newOrder.forEach(function(id) {
        $('#image-selection-form').append(`
          <input type="hidden" name="selected_images[]" value="${id}">
        `);
      });
    }
  });
</script>