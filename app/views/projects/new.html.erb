<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><%= link_to 'Home', projects_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Projects', projects_path %></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
      </ol>
    </nav>
    <h2 class="mt-2 mb-0 fw-bold">Add New Project</h2>
  </div>
  <div class="d-none d-md-block">
    <img src="https://cdn-icons-png.flaticon.com/512/3588/3588614.png" alt="Studio" style="height: 80px; opacity: 0.8;">
  </div>
</div>

<div class="card shadow border-0 overflow-hidden">
  <div class="card-header p-0">
    <div class="bg-primary text-white px-4 py-3" style="background: linear-gradient(135deg, #0d6efd, #0dcaf0) !important;">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Image/Video Collection</h4>
      </div>
      <p class="mb-0 mt-2 opacity-75 small">Fill in the information below to create a new project for the studio</p>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="p-4">
      <%= render 'form', project: @project %>
    </div>
  </div>
</div>
