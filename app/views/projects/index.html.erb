<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="display-5 fw-bold mb-0"><i class="fas fa-photo-film me-2 text-primary"></i>Studio Gallery</h1>
    <p class="text-muted mt-2 mb-0">Quản lý tất cả các bộ sưu tập hình ảnh và video của studio</p>
  </div>
  <% if admin_logged_in? %>
    <%= link_to new_project_path, class: 'btn btn-primary shadow-sm', style: "background: linear-gradient(135deg, #0d6efd, #0dcaf0); border: none;" do %>
      <i class="fas fa-plus me-1"></i> Thêm dự án mới
    <% end %>
  <% end %>
</div>

<% if !admin_logged_in? %>
  <div class="alert alert-info mb-4 shadow-sm border-0">
    <div class="d-flex">
      <div class="me-3">
        <i class="fas fa-info-circle fa-2x"></i>
      </div>
      <div>
        <h5 class="alert-heading">Chào mừng đến với hệ thống quản lý studio!</h5>
        <p class="mb-0">Vui lòng <%= link_to 'đăng nhập', login_path, class: 'alert-link' %> để quản lý các dự án và bộ sưu tập.</p>
      </div>
    </div>
  </div>
<% end %>

<div class="card shadow-sm border-0 overflow-hidden">
  <div class="card-header d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
    <h4 class="mb-0 text-dark"><i class="fas fa-list me-2 text-primary"></i>Danh sách dự án</h4>
    <div>
      <form class="d-flex">
        <div class="input-group shadow-sm">
          <input class="form-control border-end-0" type="search" placeholder="Tìm kiếm dự án..." aria-label="Search" style="border-top-right-radius: 0; border-bottom-right-radius: 0;">
          <button class="btn btn-outline-primary border-start-0" type="submit" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead style="background: linear-gradient(135deg, #212529, #343a40); color: white;">
          <tr>
            <th scope="col" width="5%" class="ps-3">#</th>
            <th scope="col" width="25%">Tên dự án</th>
            <th scope="col" width="20%">Drive ID</th>
            <th scope="col" width="10%" class="text-center">Video</th>
            <th scope="col" width="10%" class="text-center">Mô tả</th>
            <% if admin_logged_in? %>
              <th scope="col" width="10%" class="text-center">Hình ảnh</th>
              <th scope="col" width="20%" class="text-center pe-3">Thao tác</th>
            <% end %>
          </tr>
        </thead>

        <tbody class="border-0">
          <% if @projects.any? %>
            <% @projects.each_with_index do |project, index| %>
              <tr class="border-bottom">
                <td class="ps-3"><%= index + 1 %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="project-icon me-2 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background-color: rgba(13, 110, 253, 0.1);">
                      <i class="fas fa-folder text-primary"></i>
                    </div>
                    <span class="fw-bold"><%= project.name %></span>
                  </div>
                </td>
                <td><span class="badge bg-light text-dark text-wrap py-2 px-3 shadow-sm"><code><%= project.drive_id %></code></span></td>
                <td class="text-center">
                  <span class="badge rounded-pill bg-info shadow-sm">
                    <i class="fas fa-video me-1"></i> <%= project.video_urls.count %>
                  </span>
                </td>
                <td class="text-center">
                  <span class="badge rounded-pill bg-success shadow-sm">
                    <i class="fas fa-file-alt me-1"></i> <%= project.descriptions.count %>
                  </span>
                </td>
                <% if admin_logged_in? %>
                  <td class="text-center">
                    <% if project.respond_to?(:images) && project.images.present? %>
                      <span class="badge rounded-pill bg-warning shadow-sm">
                        <i class="fas fa-images me-1"></i> <%= project.images.count rescue 0 %>
                      </span>
                    <% else %>
                      <span class="badge rounded-pill bg-secondary shadow-sm">
                        <i class="fas fa-images me-1"></i> 0
                      </span>
                    <% end %>
                  </td>
                  <td class="text-end pe-3">
                    <div class="btn-group shadow-sm">
                      <%= link_to project, class: 'btn btn-sm btn-outline-info' do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <% if project.respond_to?(:reload_images) %>
                        <%= button_to reload_images_project_path(project), method: :post, class: 'btn btn-sm btn-outline-primary', form_class: 'd-inline' do %>
                          <i class="fas fa-sync-alt"></i>
                        <% end %>
                      <% end %>
                      <%= link_to edit_project_path(project), class: 'btn btn-sm btn-outline-warning' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= button_to project_path(project), 
                          method: :delete, 
                          class: 'btn btn-sm btn-outline-danger',
                          form: { data: { turbo_confirm: 'Bạn có chắc chắn muốn xóa?' } } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                    
                    <div class="dropdown d-inline-block ms-1">
                      <button class="btn btn-sm btn-light dropdown-toggle shadow-sm" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        <%= link_to project, class: 'dropdown-item' do %>
                          <i class="fas fa-eye me-2 text-info"></i> Xem chi tiết
                        <% end %>
                        <% if project.respond_to?(:reload_images) %>
                          <%= button_to reload_images_project_path(project), method: :post, class: 'dropdown-item', form_class: 'd-inline w-100' do %>
                            <i class="fas fa-sync-alt me-2 text-primary"></i> Tải lại hình ảnh
                          <% end %>
                        <% end %>
                        <%= link_to edit_project_path(project), class: 'dropdown-item' do %>
                          <i class="fas fa-edit me-2 text-warning"></i> Chỉnh sửa
                        <% end %>
                        <div class="dropdown-divider"></div>
                        <%= button_to project_path(project),
                            method: :delete,
                            class: 'dropdown-item text-danger',
                            form: { data: { turbo_confirm: 'Bạn có chắc chắn muốn xóa?' } } do %>
                          <i class="fas fa-trash me-2"></i> Xóa dự án
                        <% end %>
                      </ul>
                    </div>
                  </td>
                <% end %>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="<%= admin_logged_in? ? 7 : 5 %>" class="text-center py-5">
                <div class="py-5">
                  <div class="mb-3">
                    <div class="d-inline-block p-3 mb-3 rounded-circle bg-light">
                      <i class="fas fa-folder-open fa-3x text-muted"></i>
                    </div>
                  </div>
                  <h5 class="text-muted mb-3">Chưa có dự án nào</h5>
                  <% if admin_logged_in? %>
                    <%= link_to new_project_path, class: 'btn btn-primary px-4', style: "background: linear-gradient(135deg, #0d6efd, #0dcaf0); border: none;" do %>
                      <i class="fas fa-plus me-2"></i> Tạo dự án đầu tiên
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @projects.empty? && admin_logged_in? %>
  <div class="card bg-gradient shadow-sm border-0 mt-4 overflow-hidden">
    <div class="card-body text-center py-5" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <img src="https://cdn-icons-png.flaticon.com/512/3588/3588614.png" alt="Studio" class="mb-4" style="height: 100px; opacity: 0.7;">
          <h3 class="mb-3 fw-bold">Bắt đầu với bộ sưu tập đầu tiên của bạn!</h3>
          <p class="mb-4 text-muted">Tạo dự án mới để quản lý video, hình ảnh và mô tả một cách dễ dàng. Hệ thống sẽ tự động đồng bộ nội dung từ Google Drive.</p>
          <%= link_to new_project_path, class: 'btn btn-primary btn-lg px-5 shadow', style: "background: linear-gradient(135deg, #0d6efd, #0dcaf0); border: none;" do %>
            <i class="fas fa-plus me-2"></i> Tạo dự án mới
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
