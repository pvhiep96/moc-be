<div class="nested-fields card mb-3">
  <div class="card-body">
    <div class="form-group mb-3">
      <%= f.label :position_display, "Vị trí", class: "form-label fw-bold" %>
      <%= f.number_field :position_display, class: 'form-control', min: 0 %>
      <small class="text-muted">Số thứ tự hiển thị của mô tả</small>
    </div>
    <div class="form-group mb-3">
      <%= f.label :content, "Nội dung", class: "form-label fw-bold" %>
      <%= f.text_area :content, class: 'form-control tinymce', rows: 5 %>
      <small class="text-muted">Sử dụng trình soạn thảo để định dạng nội dung</small>
    </div>
    <% if f.object.persisted? %>
      <div class="form-group">
        <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Xóa mô tả này" %>
      </div>
    <% else %>
      <div class="form-group">
        <%= link_to_remove_association "Xóa", f, class: 'btn btn-danger btn-sm' %>
      </div>
    <% end %>
  </div>
</div> 
