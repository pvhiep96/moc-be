<div class="nested-fields card mb-3">
  <div class="card-body">
    <div class="form-group">
      <%= f.label :url, "Vertical Video URL", class: "form-label fw-semibold" %>
      <%= f.text_field :url, 
          class: "form-control",
          placeholder: "Enter vertical video URL (YouTube)",
          data: { 
            controller: "video-url",
            action: "input->video-url#validateUrl"
          } %>
      <div class="mt-3" data-video-url-target="preview"></div>
    </div>
    <% if f.object.persisted? %>
      <div class="form-group mt-2">
        <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Delete this video" %>
      </div>
    <% else %>
      <div class="form-group mt-2">
        <%= link_to_remove_association "Remove", f, class: 'btn btn-danger btn-sm' %>
      </div>
    <% end %>
  </div>
</div>